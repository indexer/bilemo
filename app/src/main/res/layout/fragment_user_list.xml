<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:context=".UserListFragment"
      >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_user_list"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/user_list_title"
        >

      <ImageView
          android:id="@+id/logout_user"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="end"
          android:layout_margin="@dimen/default_gap"
          android:foregroundGravity="center_vertical"
          android:src="@android:drawable/ic_lock_power_off"
          />

    </androidx.appcompat.widget.Toolbar>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/user_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_user_list"
        android:layout_margin="8dp"
        app:layoutManager="LinearLayoutManager"
        />

  </RelativeLayout>
  <data>
    <variable
        name="userListViewModel"
        type="com.indexer.bilemo.user.viewmodel.UserListViewModel"
        />
  </data>
</layout>